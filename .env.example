OPENAI_API_KEY=changeme
GOOGLE_OAUTH_CLIENT_ID=changeme.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=changeme

# Recherche web (choix du fournisseur)
# Options : ddg (par défaut, sans clé), serpapi, bing
SEARCH_PROVIDER=ddg
# Clés API optionnelles
SERPAPI_KEY=
BING_KEY=

# Timeout global pour les requêtes externes (secondes)
REQUEST_TIMEOUT_SECONDS=8

# Audio : taille maximale en mégaoctets et durée d'un chunk (minutes)
AUDIO_MAX_MB=300
AUDIO_CHUNK_MINUTES=30
